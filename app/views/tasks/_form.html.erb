<%= form_with model: task, :html => { class: 'w-50 m-auto'} do |f| %>
  <div class="form-group mb-4">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group mb-4">
    <%= f.label :details %>
    <%= f.text_area :details, class: "form-control" %>
  </div>
  <div class="form-group mb-4">
    <%= f.label :completed %>
    <%= f.select :completed, [['True', true], ['False', false]], {}, class: "form-control" %>
  </div>
  <%= f.submit class: 'btn btn-success' %>
<% end %>